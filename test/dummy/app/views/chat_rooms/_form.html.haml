= form_for @chat_room do |f|
  - if @chat_room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@chat_room.errors.count, "error")} prohibited this chat_room from being saved:"
      %ul
        - @chat_room.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :order
    = f.text_area :order
  .field
    = f.label :performer_name
    = f.text_field :performer_name
  .field
    = f.label :customer_name
    = f.text_field :customer_name
  .field
    = f.label :duration
    = f.number_field :duration
  .field
    = f.label :call_type
    = f.text_area :call_type
  .actions
    = f.submit 'Save'
